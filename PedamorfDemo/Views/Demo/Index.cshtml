@model Pedamorf.Demo.Models.DemoModel
<style type="text/css">
    #demoContainer { width: 100%; }
    #demoInput { width: 300px; margin-right: 15px; float: left; }
    #demoOutput { width: 1075px; }
    #output { width: 100%; height: 500px; overflow: auto; border: none; }
    #fsOutput { height: 550px; }
    #fsOutput .centered { padding-top: 10px; width: 100%; text-align: center; }
    #pending, #loading, #output { display: none; }
    .demoFieldContainer input[type=text] { width: 250px; }
    .demoFieldContainer input[type=submit] { width: 75px; }
    .demoFieldContainer textarea { width: 250px; }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $("input[type='submit']").click(function () {
            $("#initial").hide();
            $("#output").hide();
            $("#loading").show();
        });

        $("#output").load(function () {
            $("#loading").hide();
            $("#output").show();
        });
    });
</script>
<div id="demoContainer">
    <div id="demoInput">
        <form action="/Demo/Convert" id="formSource" method="post" target="output" enctype="multipart/form-data">
        <fieldset>
            <legend>Settings</legend>
            <div>
                <label for="ServiceHost">
                    Service Host:</label>
                <input type="text" id="ServiceHost" name="ServiceHost" value="localhost" /><br />
                <label for="Landscape">
                    Landscape:</label><input type="checkbox" id="Landscape" name="Landscape" />
            </div>
        </fieldset>
        <fieldset>
            <legend>Url Demo</legend>
            <div class="demoFieldContainer">
                <input type="text" id="Url" name="Url" value="http://www.geekytidbits.com" />
                <input type="submit" name="UrlButton" value="Convert" />
            </div>
        </fieldset>
        <fieldset>
            <legend>Raw Html Demo</legend>
            <div class="demoFieldContainer">
                <textarea id="Html" name="Html" rows="2"><h1>My Header</h1><p>This is a test.</p></textarea>
                <input type="submit" name="HtmlButton" value="Convert" />
            </div>
        </fieldset>
        <fieldset>
            <legend>File(s) Demo</legend>
            <div class="demoFieldContainer">
                <input type="file" id="File1" name="File1" />
                <input type="file" id="File2" name="File2" />
                <input type="submit" name="FileButton" value="Convert" />
            </div>
        </fieldset>
        </form>
    </div>
    <div id="demoOutput">
        <fieldset id="fsOutput">
            <legend>Output</legend>
            <div id="initial" class="centered">
                (Click Convert)
            </div>
            <div id="loading" class="centered">
                <img src="../../Content/loader.gif" />
                <div>
                    Converting...</div>
            </div>
            <iframe id="output"></iframe>
        </fieldset>
    </div>
</div>
